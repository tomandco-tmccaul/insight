rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user has access to a client
    function hasClientAccess(clientId) {
      return isAuthenticated() && (
        isAdmin() ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId)
      );
    }
    
    // Users collection - users can read their own data, admins can read/write all
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Clients collection - admins can read/write, clients can read their own
    match /clients/{clientId} {
      allow read: if hasClientAccess(clientId);
      allow write: if isAdmin();
      
      // Websites subcollection
      match /websites/{websiteId} {
        allow read: if hasClientAccess(clientId);
        allow write: if isAdmin();
      }
      
      // Targets subcollection
      match /targets/{targetId} {
        allow read: if hasClientAccess(clientId);
        allow write: if isAdmin();
      }
      
      // Annotations subcollection - clients can create/edit their own
      match /annotations/{annotationId} {
        allow read: if hasClientAccess(clientId);
        allow create: if hasClientAccess(clientId);
        allow update, delete: if hasClientAccess(clientId) && 
                                 (isAdmin() || resource.data.createdBy == request.auth.uid);
      }
      
      // Custom links subcollection
      match /customLinks/{linkId} {
        allow read: if hasClientAccess(clientId);
        allow write: if isAdmin();
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

